# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
indent_style = space
indent_size = 4

# Set default charset
charset = utf-8

# Match TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# Match JSON files
[*.json]
indent_style = space
indent_size = 2

# Match CSS files
[*.css]
indent_style = space
indent_size = 2

# Match Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Match HTML files
[*.html]
indent_style = space
indent_size = 2